<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include _header.ejs%>
</head>
<body>
    <%- include _navbar.ejs %>
    <div class="d-flex justify-content-center mt-5">
        <form class="border p-4 rounded" action="/tendencia_register" method="POST">
            <div class="mb-3 d-flex flex-column">
              <label for="exampleInputEmail1" class="form-label">Your sex: </label>
              <select name="sexo">
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="fleto">Fleto</option>
                <option value="maraka">Maraka</option>
              </select>
            </div>
            
            <div class="form-check">
                <input class="form-check-input" type="radio" name="posicion" value="arriba" id="flexRadioDefault1">
                <label class="form-check-label" for="flexRadioDefault1">
                  Te gusta arriba
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="posicion" value="abajo" id="flexRadioDefault2" checked>
                <label class="form-check-label" for="flexRadioDefault2">
                  Te gusta abajo
                </label>
              </div>
            <button type="submit" class="btn btn-dark mt-3">Submit</button>
        </form>
    </div>
</body>
</html>